{
  "title": "Errores y Alertas",
  "tags": [
    "railway",
    "errors",
    "alerts"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Errores (24h)",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(count_over_time({project=~\".+\"} |~ \"(?i)error\"[24h]))",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "red"
          }
        }
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Excepciones (24h)",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 8,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(count_over_time({project=~\".+\"} |~ \"(?i)exception\"[24h]))",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "orange"
          }
        }
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Fatales (24h)",
      "gridPos": {
        "h": 4,
        "w": 8,
        "x": 16,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(count_over_time({project=~\".+\"} |~ \"(?i)fatal|critical\"[24h]))",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "dark-red"
          }
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Errores por Proyecto (\u00faltimas 6h)",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "sum by (project) (count_over_time({project=~\".+\"} |~ \"(?i)error|exception\"[5m]))",
          "refId": "A",
          "legendFormat": "{{project}}"
        }
      ],
      "datasource": {
        "type": "loki",
        "uid": "loki"
      }
    },
    {
      "id": 5,
      "type": "table",
      "title": "Top Servicios con Errores",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "expr": "topk(10, sum by (project, service) (count_over_time({project=~\".+\"} |~ \"(?i)error\"[1h])))",
          "refId": "A",
          "instant": true
        }
      ],
      "datasource": {
        "type": "loki",
        "uid": "loki"
      }
    },
    {
      "id": 6,
      "type": "logs",
      "title": "\u00daltimos Errores",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "targets": [
        {
          "expr": "{project=~\".+\"} |~ \"(?i)error|exception|fatal\"",
          "refId": "A"
        }
      ],
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true
      }
    }
  ],
  "uid": "errors"
}